    "raiseFork": {
      "key": "Up",
      "description": "Lever les fourches (Flèche Haut)",
      "enabled": true
    },
    "lowerFork": {
      "key": "Down", 
      "description": "Baisser les fourches (Flèche Bas)",
      "enabled": true
    },
    "tiltForward": {
      "key": "Right",
      "description": "Incliner le mât vers l'avant (Flèche Droite)",
